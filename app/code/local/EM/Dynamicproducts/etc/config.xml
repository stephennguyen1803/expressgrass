<?xml version="1.0"?>
<config>
    <modules>
        <EM_Dynamicproducts>
            <version>0.1.0</version>
        </EM_Dynamicproducts>
    </modules>
    <frontend>
        <routers>
            <dynamicproducts>
                <use>standard</use>
                <args>
                    <module>EM_Dynamicproducts</module>
                    <frontName>dynamicproducts</frontName>
                </args>
            </dynamicproducts>
        </routers>
        <layout>
            <updates>
                <dynamicproducts>
                    <file>dynamicproducts.xml</file>
                </dynamicproducts>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<dynamicproducts>
				<use>admin</use>
				<args>
					<module>EM_Dynamicproducts</module>
					<frontName>dynamicproducts</frontName>
				</args>
			</dynamicproducts>
        </routers>
    </admin>
