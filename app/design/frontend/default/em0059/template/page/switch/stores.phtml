<?php 
/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
?>
<?php if(count($this->getGroups())>0): ?>
<?php
	$i	=	1;
	foreach($this->getGroups() as $_group){
		if($this->htmlEscape($_group->getName()) == 'Main Store'){
			$tam['name']	=	"Default";
			$tam['link']	=	$_group->getHomeUrl();
			$info[0]	=	$tam;
		}
		else{
			$tam['name']	=	$this->htmlEscape($_group->getName());
			$tam['link']	=	$_group->getHomeUrl();
			$info[$i]	=	$tam;
		}		
		$i++;
	}
	ksort($info);	
?>
	<div class="store-switcher toolbar-switch">
		<label class="your-country"><?php echo $this->__('Your country: '); ?></label>
		<div class="toolbar-title">
			<select id="select-store" title="<?php echo $this->__('Select Store') ?>" onchange="location.href=this.value">
			<?php foreach ($this->getGroups() as $_group): ?>
				<?php $_selected = ($_group->getId()==$this->getCurrentGroupId()) ? ' selected="selected"' : '' ?>
				<option value="<?php echo $_group->getHomeUrl() ?>"<?php echo $_selected ?>><?php echo $this->escapeHtml($_group->getName()) ?></option>
			<?php endforeach; ?>
			</select>
		</div>
	</div>
<?php endif; ?>
