<?php 
	$helper = Mage::helper('cms');
    $processor = $helper->getBlockTemplateProcessor();
?>
<div class="tabs_wrapper">
	<ul class="tabs_control">
		<?php $j = 1; for($i = 1;$i <= 10;$i++):?>            
			<?php if($this->getTitleTab($i)):?>
            <?php $j ++ ?>
			<li class="tab-items">
				<a href="#tab_<?php echo $i;?>"><?php echo $this->getTitleTab($i)?></a>
			</li>      
			<?php endif;?>
		<?php endfor;?>
	</ul>
    <script  type="text/javascript">decorateGeneric($$('li.tab-items'), ['first','last'])</script>
	<div class="tab_content">
		<?php for($i = 1;$i <= 10;$i++):?>
			<?php if($this->getTitleTab($i)):?>
			<div class="tab-item content_tab_<?php echo $i;?>">
				<?php 
					//Show Static Block 
					echo $processor->filter($this->getStaticBlock($i));
					//Show Widget Instance 
					echo $processor->filter($this->getWidgetInstance($i));
				?>	
			</div>	
			<?php endif;?>
		<?php endfor;?>
	</div>
</div>